---
import { Icon } from "astro-icon/components";

const { icon, iconPlatform, namePlatform, title, date, time } = Astro.props;
---

<div
  class="flex flex-col px-6 py-8 overflow-hidden bg-white hover:bg-gradient-to-br hover:from-gray-100 hover:via-gray-50 hover:to-gray-100 rounded-xl shadow-lg duration-300 hover:shadow-2xl group border border-gray-200 h-full"
>
  <div class="flex flex-row justify-between items-center">
    <div
      class="px-4 py-4 border border-gray-200 group-hover:bg-white rounded-xl bg-opacity-30"
    >
      <Icon name={icon} class="h-10 w-10" />
    </div>
    <div class="inline-flex text-sm text-gray-600 sm:text-base">
      <Icon name={iconPlatform} class="h-5 w-5 text-emerald-500 mr-1" />
      <p>{namePlatform}</p>
    </div>
  </div>
  <spam class="text-lg sm:text-xl font-bold sm:mt-8 mt-5">
    {title}
  </spam>
  <div class="flex flex-row text-gray-700 justify-between sm:text-base text-sm">
    <p>{date}</p>
    {time &&
    <span class="text-gray-500 sm:text-sm text-xs">
      {time}
    </span>
    }
  </div>
</div>
