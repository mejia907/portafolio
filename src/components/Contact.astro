---
import { Icon } from "astro-icon/components";
---

<section id="contact" class="pt-[4vh] md:mx-40 mx-8 my-0 min-h-fit">
  <div class="text-center m-2 gap-2 flex items-center justify-center">
    <Icon name="iconoir:hand-contactless" class="h-8 w-8 2xl:h-10 2xl:w-10" />
    <h1
      class="font-bold md:text-5xl 2xl:text-5xl lg:text-4xl text-3xl py-5 2xl:py-10"
    >
      Contacto
    </h1>
  </div>
  <div
    class="flex justify-center border rounded-2xl md:rounded-full border-gray-900 my-auto flex-col md:flex-row md:w-1/3 p-2 items-center mx-auto"
  >
    <div class="flex items-center justify-center gap-2 m-2">
      <Icon
        name="proicons:mail"
        class="h-10 w-10 cursor-pointer"
        onclick={"location.href='mailto:mejia9070@gmail.com'"}
      />
      <p><a href="mailto:mejia9070@gmail.com">mejia9070@gmail.com</a></p>
    </div>
    <div class="flex items-center justify-center gap-2 m-2">
      <Icon
        name="fa6-brands:linkedin"
        class="h-10 w-10 cursor-pointer"
        onclick={"window.open('https://www.linkedin.com/in/andresfelipemejiar', '_blank')"}
      />
