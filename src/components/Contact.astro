---
import { Icon } from "astro-icon/components";
---

<section
  id="contact"
  class="pt-[4vh] md:mx-40 mx-8 my-0 min-h-fit"
>
  <div class="text-center m-2 gap-2 flex items-center justify-center">
    <Icon
      name="iconoir:hand-contactless"
      class="h-8 w-8 2xl:h-10 2xl:w-10"
    />
    <h1
      class="font-bold md:text-5xl 2xl:text-5xl lg:text-4xl text-3xl py-5 2xl:py-10"
    >
      Contacto
    </h1>
  </div>
  <div
    class="flex flex-col sm:flex-row justify-center items-center border rounded-3xl border-gray-900 my-auto w-auto max-w-max mx-auto p-3 sm:p-4 gap-3 sm:gap-6"
  >
    <div
      class="flex items-center justify-center gap-2 duration-200 ease-in-out hover:scale-105"
    >
      <Icon
        name="proicons:mail"
        class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8 cursor-pointer transition"
        onclick={"location.href='mailto:mejia9070@gmail.com'"}
      />
      <p class="text-sm sm:text-base">
        <a href="mailto:mejia9070@gmail.com">mejia9070@gmail.com</a>
      </p>
    </div>
    <div
      class="flex items-center justify-center gap-2 transition duration-200 ease-in-out hover:scale-105"
    >
      <Icon
        name="fa6-brands:linkedin"
        class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8 cursor-pointer transition"
        onclick={"window.open('https://www.linkedin.com/in/andresfelipemejiar', '_blank')"}
      />
      <p class="text-sm sm:text-base">
        <a
          href="https://www.linkedin.com/in/andresfelipemejiar"
          target="_blank"
          >LinkedIn</a
        >
      </p>
    </div>
  </div>
</section>
